%form{ :method => 'POST', :action => '/' }

  - Hobo.categories.each do |category|
    %h2=category.name
    - category.packages.each do |package|
      %input{ type: "checkbox", name: "packages[]", value: package.name }= package.title

      - package.selectors.each do |selector|
        = haml(:_selector, layout: false, locals: {selector: selector})
      - package.options.each do |sub_option|
        = haml(:_option, layout: false, locals: {option: sub_option })

  %input{ :type => 'submit', value: 'Generate' }